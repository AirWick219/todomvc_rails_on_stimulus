<div class="footer <%= "hidden" unless @todos.any? %>" data-target="todoList.footer">
  <span class="todo-count" data-target="todoList.activeNumber">
    <%= pluralize @todos.reject(&:completed).size, "item" %> left
  </span>
  <ul class="filters">
    <li>
      <%= link_to "All",
            root_path,
            data: { action: "click->todoList#selectFilter", target: "todoList.filter" },
            name: "all",
            class: "selected" %>
    </li>
    <li>
      <%= link_to "Active",
            root_path({completed: false}),
            name: "active",
            data: { action: "click->todoList#selectFilter", target: "todoList.filter" } %>
    </li>
    <li>
      <%= link_to "Completed",
            root_path({completed: true}),
            name: "completed",
            data: { action: "click->todoList#selectFilter", target: "todoList.filter" } %>
    </li>
  </ul>
    <button class="clear-completed <%= @todos.select(&:completed).count > 0 ? "" : "hidden" %>" data-action="todoList#destroyAll" data-target="todoList.clearCompleted">Clear completed</button>
</div>
